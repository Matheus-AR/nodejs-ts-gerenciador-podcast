{
  "name": "nodejs-ts-gerenciador-podcast",
  "version": "1.0.0",
  "description": "Um gerenciador de podcast usando nodejs, typescript e http module.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start:dev": "tsx --env-file=.env src/server.ts",
    "start:watch": "tsx watch --env-file=.env src/server.ts",
    "dist": "tsup src",
    "start:dist": "npm run dist && node --env-file=.env dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "tsup": "^8.1.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3"
  }
}
